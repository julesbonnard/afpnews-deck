{
  "name": "afpnews-deck",
  "version": "0.1.3",
  "description": "A tool to read AFP stories in columns",
  "author": "julesbonnard",
  "main": "dist/afpnews-deck.electron.js",
  "build": {
    "productName": "afpNewsDeck",
    "appId": "com.afpnews.deck",
    "mac": {
      "artifactName": "${productName}-${version}-osx.${ext}",
      "category": "public.news.productivity",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "linux": {
      "artifactName": "${productName}-${version}-${arch}-linux.${ext}",
      "maintainer": "Jules Bonnard",
      "target": [
        "tar.gz",
        "deb",
        "rpm"
      ]
    },
    "win": {
      "target": [
        "zip",
        "dir"
      ]
    },
    "files": [
      "dist/**/*"
    ]
  },
  "scripts": {
    "dev": "webpack-dev-server --mode development",
    "build": "webpack --mode production",
    "electron": "electron dist/afpnews-deck.electron.js",
    "lint": "eslint --ext .js,.vue src",
    "pack": "electron-builder --dir",
    "dist": "electron-builder -mwl",
    "postinstall": "electron-builder install-app-deps"
  },
  "devDependencies": {
    "@afp/toolkit-styles": "^1.3.3",
    "autoprefixer": "^8.1.0",
    "axios": "^0.18.0",
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.2.2",
    "babel-loader": "^7.1.4",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-minify": "^0.3.0",
    "babel-preset-stage-2": "^6.24.1",
    "babel-register": "^6.26.0",
    "css-loader": "^0.28.10",
    "electron": "^1.8.3",
    "electron-builder": "^20.5.1",
    "eslint": "^4.18.2",
    "eslint-config-standard": "^11.0.0",
    "eslint-friendly-formatter": "^3.0.0",
    "eslint-loader": "^2.0.0",
    "eslint-plugin-html": "^4.0.2",
    "eslint-plugin-import": "^2.9.0",
    "eslint-plugin-node": "^6.0.1",
    "eslint-plugin-promise": "^3.7.0",
    "eslint-plugin-standard": "^3.0.1",
    "file-loader": "^1.1.11",
    "html-webpack-plugin": "^3.0.6",
    "moment": "^2.21.0",
    "node-sass": "^4.8.1",
    "sass-loader": "^6.0.7",
    "url": "^0.11.0",
    "url-loader": "^1.0.1",
    "vue": "^2.5.16",
    "vue-infinite-loading": "^2.2.3",
    "vue-linkify": "^1.0.1",
    "vue-loader": "^14.2.1",
    "vue-template-compiler": "^2.5.16",
    "webpack": "^4.1.1",
    "webpack-cli": "^2.0.11",
    "webpack-dev-server": "^3.1.1"
  },
  "engines": {
    "node": ">= 4.0.0",
    "npm": ">= 3.0.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ]
}
